---
import type { GetStaticPaths } from "astro";
  // Type GetStaticPaths de Astro
import TypedBlogPost from '../../components/TypedBlogPost.astro';
import MainLayout from '../../layouts/MainLayout.astro';
import { getCollection } from "astro:content";

import "../../styles/global.css";
const { page } = Astro.props;

export const getStaticPaths = (async ({ paginate }) => {
    
    const blogPosts = await getCollection('blog');
    return paginate(blogPosts, { pageSize: 2 });
}) satisfies GetStaticPaths;

---

<MainLayout>
  <div class="py-10 mx-auto">
    <h1 class="text-3xl font-semibold capitalize lg:text-4xl text-white">
      Renan's Blog paginado
    </h1>
  </div>

  <section class="bg-gray-900" aria-label="Entradas de blog">
    <div class="grid grid-cols-1 gap-8 mt-8 md:mt-16 md:grid-cols-2">
      {page.data.map((post) => <TypedBlogPost post={post} />)}
    </div>
  </section>

  <section aria-label="Controles" class="flex justify-between mt-10">

<!--   page .. ?? prev   -->
    <a
      href={page.url.prev}
      class:list={{
        disabled: !page.url.prev,
      }}>Anteriores</a
    >
    
<!--   page .. ?? next   -->
    <a
      href={page.url.next}
      class:list={{
        disabled: !page.url.next,
      }}>Siguientes</a
    >
  </section>
</MainLayout>

<style>
 a {
  background-color: #3b82f6; /* bg-blue-500 */
  color: white;              /* text-white */
  padding: 0.5rem;           /* p-2 */
  border-radius: 0.25rem;    /* rounded */
  cursor: pointer;           /* cursor-pointer */
  transition: background-color 0.2s ease-in-out;
}

a:hover {
  background-color: #2563eb; /* hover:bg-blue-600 */
}

a.disabled {
  background-color: #4b5563; /* bg-gray-600 */
  pointer-events: none;
}

a.disabled:hover {
  background-color: #4b5563; /* hover:bg-gray-600 (no change) */
}
</style>